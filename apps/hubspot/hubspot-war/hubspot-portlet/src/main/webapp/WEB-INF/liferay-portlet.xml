<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>1</portlet-name>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.hubspot.messaging.SendHubSpotEmailRenewalsMessageListener</scheduler-event-listener-class>
			<trigger>
				<cron>
					<cron-trigger-value>0 0 10 * * ? *</cron-trigger-value>
				</cron>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.hubspot.messaging.SyncHubSpotVIDMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>hubspot.vid.sync.interval</property-key>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<control-panel-entry-category>portal</control-panel-entry-category>
		<control-panel-entry-weight>12.0</control-panel-entry-weight>
		<preferences-company-wide>true</preferences-company-wide>
		<css-class-wrapper>hubspot-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>